<%- model_class = PaymentProfile -%>
<div class="page-header">
  <h1><%= t 'payment_profile' %></h1>
</div>

<%= render 'payment_profile_info', :payment_profile => @payment_profile %>

<div class="form-actions">
  <% if current_user.is_admin? %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              payment_profiles_path, :class => 'btn'  %>
  <% end %>
  <%= link_to t('back_home'), user_root_path, :class => 'btn btn-danger' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_payment_profile_path(@payment_profile), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              payment_profile_path(@payment_profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás seguro?')) },
              :class => 'btn btn-default' %>
</div>
