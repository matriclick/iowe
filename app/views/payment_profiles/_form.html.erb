<%= form_for @payment_profile, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :bank_name, t('bank_name'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :bank_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :account_number, t('account_number'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :account_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :account_type, t('account_type'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :account_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rut, t('rut'), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rut, :class => 'text_field' %>
    </div>
  </div>
	<%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-actions">
    <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
	<% if current_user.is_admin? %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                payment_profiles_path, :class => 'btn' %>
	<% end %>
  </div>
<% end %>
