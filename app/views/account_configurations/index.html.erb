<%- model_class = AccountConfiguration -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:allow_netting) %></th>
      <th><%= model_class.human_attribute_name(:collection_mail_frecuency_in_days) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @account_configurations.each do |account_configuration| %>
      <tr>
        <td><%= link_to account_configuration.id, account_configuration_path(account_configuration) %></td>
        <td><%= account_configuration.user_id %></td>
        <td><%= account_configuration.allow_netting %></td>
        <td><%= account_configuration.collection_mail_frecuency_in_days %></td>
        <td><%=l account_configuration.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_account_configuration_path(account_configuration), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      account_configuration_path(account_configuration),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_account_configuration_path,
            :class => 'btn btn-primary' %>
