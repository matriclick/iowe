<%- model_class = AccountConfiguration -%>
<div class="page-header">
  <h1><%=t 'account_configuration' %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t 'allow_netting' %>:</strong></dt>
  <dd><%= @account_configuration.allow_netting ? '✓' : '✘' %></dd>
  <dt><strong><%= t 'collection_frecuency' %>:</strong></dt>
  <dd><%= @account_configuration.collection_mail_frecuency_in_days %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('back_home'), user_root_path, :class => 'btn' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_account_configuration_path(@account_configuration), :class => 'btn' %>  
  <% if current_user.is_admin? %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              account_configurations_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_configuration_path(@account_configuration),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
