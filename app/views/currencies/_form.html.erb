<%= form_for @currency, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :symbol, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :symbol, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fx_rate, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fx_rate, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                currencies_path, :class => 'btn' %>
  </div>
<% end %>
